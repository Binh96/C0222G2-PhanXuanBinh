{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "lib": ["es6", "DOM"],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true
    },
    "exclude": ["node_modules", "dist"]
}